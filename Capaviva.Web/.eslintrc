{
	"parser": "babel-eslint",
	"extends": "react",
	"env": {
		"browser": true,
		"node": true
	},
	"globals":{
        "JSX": true
    },
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"rules": {
		"indent": ["error", "tab"],
		"semi": ["error", "always"],
		"space-before-function-paren": ["error", {
			"anonymous": "never",
			"named": "never",
			"asyncArrow": "never"
		}],
		"max-params": ["error", 7]
	}
}